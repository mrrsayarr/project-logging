                <button id="toggleRefreshButton" class="btn btn-success m-2">Start/Stop Automatic</button>
                
                <script>
                    const refreshButton = document.getElementById('toggleRefreshButton');
                
                    // Otomatik yenileme durumunu localStorage'dan al
                    const isRefreshing = localStorage.getItem('isRefreshing') === 'true';
                
                    if (isRefreshing) {
                        startRefresh();
                    } else {
                        stopRefresh();
                    }
                
                    refreshButton.addEventListener('click', function() {
                        if (localStorage.getItem('isRefreshing') === 'true') {
                            stopRefresh();
                        } else {
                            startRefresh();
                        }
                    });
                
                    function startRefresh() {
                        localStorage.setItem('isRefreshing', 'true');
                        refreshButton.textContent = 'Stop Automatic Refresh';
                        setTimeout(function() {
                            location.reload();
                        }, 3000); // 3 saniye
                    }
                
                    function stopRefresh() {
                        localStorage.setItem('isRefreshing', 'false');
                        refreshButton.textContent = 'Start Automatic Refresh';
                    }

                    // EventID Aramaları için
                    window.onload = function() {
                                // Tüm EventID hücrelerini seç
                                const eventIDCells = document.querySelectorAll('td.eventID');
                        
                                // Her bir hücreye bir click event listener ekleyin
                                eventIDCells.forEach(cell => {
                                    // Hücrenin mevcut içeriğini al
                                    const cellContent = cell.textContent.trim();
                        
                                    // Hücrenin içeriğini temizle
                                    cell.textContent = '';
                        
                                    // Yeni bir div elementi oluştur ve hücrenin içeriğini içine al
                                    const div = document.createElement('div');
                                    div.textContent = cellContent;
                        
                                    // Div'i bir flex container olarak ayarla
                                    div.style.display = 'flex';
                                    div.style.justifyContent = 'space-between';
                                    div.style.alignItems = 'center';
                        
                                    // Yeni bir span elementi oluştur
                                    const span = document.createElement('span');
                        
                                    // Span elementine bir click event listener ekleyin
                                    span.addEventListener('click', function() {
                                        window.open(`https://www.ultimatewindowssecurity.com/securitylog/encyclopedia/event.aspx?eventid=${cellContent}`, '_blank');
                                    });
                        
                                    // Span elementine bir büyüteç simgesi ekleyin
                                    span.innerHTML = `<img src="/public/img/773969.png" alt="Search" width="20" height="20">`;
                        
                                    // Span elementine biraz CSS ekleyin
                                    span.style.cursor = 'pointer';
                        
                                    // Span elementini div'e ekleyin
                                    div.appendChild(span);
                        
                                    // Div elementini hücreye ekleyin
                                    cell.appendChild(div);
                                });
                            };
                </script>
