            <!-- Table Start -->
            <div class="container-fluid pt-4 px-4">
                <table class="table text-start align-middle table-bordered table-hover mb-0 sticky-header">
                    <thead>
                        <tr>
                            <th scope="col">#</th> <!-- Sıra numarası için yeni bir sütun başlığı ekledik -->
                            <th scope="col">EventID</th>
                            <th scope="col">PredictedValue</th>
                            <th scope="col">Event Description</th>
                            <!-- <th scope="col">Status</th> -->
                            <th scope="col">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% events.forEach(function(event, index) { %>
                        <tr>
                            <td><%= index + 1 %></td> <!-- Sıra numarasını ekledik -->
                            <td class="eventID"><%= event.EventID %>     </td>
                            <td>
                                <%= event.PredictedValue %>
                                <% if (event.PredictedValue == 0) { %>
                                    <span class="badge bg-success">Safe</span>
                                <% } else if (event.PredictedValue <= 2) { %>
                                    <span class="badge bg-warning">Warning</span>
                                <% } else { %>
                                    <span class="badge bg-danger">Danger</span>
                                <% } %>
                            </td>
                            <td style="max-width: 1000px; word-wrap: break-word;"><%= event.Description ? event.Description : 'Unknown' %></td>
                            <!-- <td><%= event.Level %></td> -->
                            <!-- <td><%= event.Channel %></td> -->
                            <td>
                                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#details-<%= index + 1 %>">Details</button>
                            </td>
                        </tr>
                  
                    <div class="modal fade" id="details-<%= index + 1 %>" tabindex="-1" aria-labelledby="details-<%= index + 1 %>-label" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                          <div class="modal-content bg-secondary text-white">
                            <div class="modal-header">
                              <h5 class="modal-title" id="details-<%= index + 1 %>-label">Event Details</h5>
                              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div style="overflow: auto; max-height: 400px;">  
                                    <p>EventID: <%= event.EventID ? event.EventID : 'Unknown' %></p>
                                    <p>PredictedValue: <%= event.PredictedValue %>
                                        <% if (event.PredictedValue == 0) { %>
                                          <span class="badge bg-success">Safe</span>
                                        <% } else if (event.PredictedValue <= 2) { %>
                                          <span class="badge bg-warning">Warning</span>
                                        <% } else { %>
                                          <span class="badge bg-danger">Danger</span>
                                        <% } %>
                                    <p style="word-wrap: break-word;">Description: <%= event.Description ? event.Description : 'Unknown' %></p>
                                    <p>SourceName: <%= event.SourceName ? event.SourceName : 'Unknown' %></p>
                                    <p>Time: <%= event.TimeGenerated ? event.TimeGenerated : 'Unknown' %></p>
                                    <p>Status: <%= event.Level ? event.Level : 'Unknown' %></p>
                                    <p>Channel: <%= event.Channel ? event.Channel : 'Unknown' %></p>
                                    <p class="wrap-text">Message: <%- event.Message ? event.Message.replace(/\r\n/g, '<br>') : 'Unknown' %></p>
                                </div>
                            </div>  
                            <div class="modal-footer">
                              <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                            </div>
                          </div>
                        </div>
                      </div>
                      <% }); %>
                    </tbody>
                </table>
