                <div class="row justify-content-center">
                    <form action="/update-path" method="POST">
                        <div class="mb-3">
                          <label for="newPath" class="form-label"></label>
                          <input type="text" class="form-control border-success m-2" id="newPath" name="newPath" value="<%= path %>" readonly>
                          <input type="text" class="form-control border-success m-2" id="newPathInput" name="newPathInput" placeholder="Enter your directory path" required>
                          <small class="form-text text-muted m-2">Example: C:\Users\muham\Desktop\Project\WebApp</small>
                        </div>
                        <button type="submit" class="btn btn-primary m-2">Update Path</button>
                    </form>


                    <!-- Table Start -->
                    <div class="container-fluid pt-4 px-4">
                        <table class="table table-responsive">
                            <thead>
                            <tr>
                                <th scope="col">Event Type</th>
                                <th scope="col">File Path</th>
                                <th scope="col">Timestamp</th>
                                <th scope="col">Details</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% 
                                file_logs.sort((a, b) => new Date(b.timestamp) - new Date(a.timestamp));
                                file_logs.forEach(function(filelog, index) { 
                                var date = new Date(filelog.timestamp);
                                var formattedTime = date.toLocaleDateString() + ' ' + date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
                            %>
                            <tr>
                                <td><%= filelog.event_type %></td>
                                <td><%= filelog.file_path %></td>
                                <td><%= formattedTime %></td>
                                <td>
                                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#details-<%= index + 1 %>">Details</button>
                                </td>
                            </tr>
                        
                            <div class="modal fade" id="details-<%= index + 1 %>" tabindex="-1" aria-labelledby="details-<%= index + 1 %>-label" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                <div class="modal-content bg-secondary text-white">
                                    <div class="modal-header">
                                    <h5 class="modal-title" id="details-<%= index + 1 %>-label">File Details</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                    <div style="overflow: auto; max-height: 400px;">  
                                        <p>Event Type: <%= filelog.event_type %></p>
                                        <p>File Path: <%= filelog.file_path %></p>
                                        <p>Timestamp: <%= formattedTime %></p>
                                    </div>
                                    </div>
                                    <div class="modal-footer">
                                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                                    </div>
                                </div>
                                </div>
                            </div>
                            <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <!-- Table End -->

                </div>
            </div>


            <!-- For Modal -->
            <script>
                document.querySelectorAll('[data-bs-toggle="modal"]').forEach(function (element) {
                    element.addEventListener('click', function () {
                        var target = document.querySelector(element.getAttribute('data-bs-target'));
                        if (target.classList.contains('show')) {
                            target.classList.remove('show');
                        } else {
                            document.querySelectorAll('.modal.show').forEach(function (modal) {
                                modal.classList.remove('show');
                            });
                            target.classList.add('show');
                        }
                    });
                });
            </script>

